<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zoom clone</title>
    <link rel="stylesheet" href="style.css">
    <script src="/socket.io/socket.io.js"></script>  <!-- import socket.io -->
    <script src="https://kit.fontawesome.com/02178951d3.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
        const room_id = "<%= roomId %>";
    </script>
</head>
<body>

    
    <div class="main">
        <div class="main_left">
            <div class="main_videos">
                <div id="video-grid">

                </div>
            </div>
            <div class="main_controls">
                <div class="main_contols_block">
                    <div class="main_controls_buttons">
                        <i class="fas fa-microphone"></i>
                        <span>mute</span>
                    </div>
                    <div class="main_controls_buttons">
                        <i class="fas fa-video"></i>
                        <span>Stop video</span>
                    </div>
                </div>
                <div class="main_contols_block">
                    <div class="main_controls_buttons">
                        <i class="fas fa-shield-alt"></i>
                        <span>Security</span>
                    </div>
                    <div class="main_controls_buttons">
                        <i class="fas fa-user-friends"></i>
                        <span>Participants</span>
                    </div>
                    <div class="main_controls_buttons">
                        <i class="fas fa-comment-alt"></i>
                        <span>Chat</span>
                    </div>
                </div>
                <div class="main_contols_block">
                    <div class="main_controls_buttons">
                        <span id="leave">Leave Meeting</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main_right">
            <div class="main_header">
                <h5>Chat</h5>
            </div>
            <div class="main_chat_window">
                <ul class="messages">

                </ul>
            </div>
            <div class="main_message_container">
                <input id="chat_message" type="text" placeholder="Type your message here...">
            </div>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>
